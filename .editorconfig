[*]
charset = utf-8
indent_size = tab
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# The YAML standard convention uses 2 spaces as indentation,
# and the way that alignment works requires spaces.
[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
